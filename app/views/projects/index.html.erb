<% provide(:title, 'All Projects') %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <h2>All Projects</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 col-md-6">
      <h3><%= @total_time %> hours worked on <%= @projects.count %> Project(s)</h3>
    </div>
    <div class="col-sm-6 col-md-6">
      <%= link_to 'New Project', new_project_path, class: 'pull-right btn btn-primary' %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-12">
      <table class="table table-bordered table-striped push-top">
        <tbody>
          <tr>
            <th>Name</th>
            <th>Last Worked On</th>
            <th>Total Time</th>
            <th>Time Percentage</th>
          </tr>
          <% if @projects.any? %>
            <%= render @projects %>
          <% else %>
            <tr>
              <td colspan="5">There are no projects. Add one!</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>